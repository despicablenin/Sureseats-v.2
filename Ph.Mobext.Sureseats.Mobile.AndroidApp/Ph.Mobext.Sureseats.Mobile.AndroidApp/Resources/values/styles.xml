<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name = "wrapContent">
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">wrap_content</item>
    </style>

	<style name = "fillParent">
		<item name = "android:layout_width">fill_parent</item>
		<item name = "android:layout_height">fill_parent</item>
	</style>

	<style name = "verticalOrientationFill" parent = "@style/fillParent">
		<item name = "android:orientation">vertical</item>
	</style>

	<style name = "horizontalOrientationFill" parent = "@style/fillParent">
		<item name = "android:orientation">horizontal</item>
	</style>

	<style name = "verticalOrientationWrap" parent = "@style/wrapContent">
		<item name = "android:orientation">vertical</item>
	</style>

	<style name = "horizontalOrientationWrap" parent = "@style/wrapContent">
		<item name = "android:orientation">horizontal</item>
	</style>
</resources>